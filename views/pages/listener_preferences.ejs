                            <div class="itemPreference">
                                <p class="itemDescriptor">Language 1</p>
                                <img src="/assets/images/globe.jpg" alt="Language 1" class="itemImg">
                            </div>
                            <div class="itemPreference">
                                <p class="itemDescriptor">Language 2</p>
                                <img src="/assets/images/globe.jpg" alt="Language 2" class="itemImg">
                            </div>
                            <div class="itemPreference">
